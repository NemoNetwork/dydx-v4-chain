{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
    ],
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "baseUrl": ".",
    "paths": {
      "@nemo-network-indexer/example-package": ["packages/example-package/src"],
      "@nemo-network-indexer/base": ["packages/base/src"],
      "@nemo-network-indexer/dev": ["packages/dev/src"],
      "@nemo-network-indexer/kafka": ["packages/kafka/src"],
      "@nemo-network-indexer/postgres": ["packages/postgres/src"],
      "@nemo-network-indexer/redis": ["packages/redis/src"],
      "@nemo-network-indexer/compliance": ["packages/compliance/src"],
    },
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": true,
}
